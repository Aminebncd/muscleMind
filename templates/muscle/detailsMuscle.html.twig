{% extends 'base.html.twig' %}

{% block title %}Hello MuscleController!{% endblock %}

{% block body %}
<div class="container bg-primary/60 p-8 rounded-lg w-full max-w-screen-md flex flex-col mx-auto backdrop-blur-md">
    <h1 class="text-4xl font-bold mb-4">Muscle details 
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{path ('app_muscle_edit', {'id' : muscle.id})}}" class="text-yellow-500 text-lg hover:underline"><i class="fa-solid fa-pen-to-square"></i></a>
            <a href="{{path ('app_muscle_delete', {'id' : muscle.id})}}" class="text-red-600 text-lg hover:underline"><i class="fa-solid fa-trash"></i></a>
        {% endif %}
    </h1>

    <p class="text-lg mb-2">Name: <span class="font-semibold">{{ muscle}}</span></p>
    <p class="text-lg mb-2">Function: <span class="font-semibold">{{muscle.muscleFunction}}</span></p>

    <a href="{{ path('app_muscleGroup_details', {'id' : muscleGroup.id}) }}" class="text-white hover:underline"><i class="fa-solid fa-arrow-left"></i>  Back to muscle group</a>
</div>
{% endblock %}