{% extends 'base.html.twig' %}

{% block title %}Settings - MuscleMind{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="page-header mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
            <i class="fas fa-cog mr-3 text-quinary"></i>Settings
        </h1>
        <p class="text-gray-600 dark:text-gray-300 mt-2">Manage your account and preferences</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Account Settings -->
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">
                    <i class="fas fa-user mr-2 text-blue-500"></i>
                    Account Settings
                </h2>
                <p class="text-sm text-gray-600 dark:text-gray-300">Update your personal information</p>
            </div>
            <div class="card-content space-y-3">
                <a href="{{ path('app_user_updateProfile', {'id': app.user.id}) }}" class="settings-link">
                    <i class="fas fa-edit mr-3 text-blue-500"></i>
                    <div>
                        <span class="font-medium">Update Profile</span>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Change your username and personal details
                        </p>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </a>

                <a href="{{ path('app_register_updateEmail', {'id': app.user.id}) }}" class="settings-link">
                    <i class="fas fa-envelope mr-3 text-green-500"></i>
                    <div>
                        <span class="font-medium">Update Email</span>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Change your email address</p>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </a>

                <a href="{{ path('app_register_updatePassword', {'id': app.user.id}) }}" class="settings-link">
                    <i class="fas fa-lock mr-3 text-yellow-500"></i>
                    <div>
                        <span class="font-medium">Update Password</span>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Change your account password</p>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </a>
            </div>
        </div>

        <!-- Data Management -->
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">
                    <i class="fas fa-database mr-2 text-orange-500"></i>
                    Data Management
                </h2>
                <p class="text-sm text-gray-600 dark:text-gray-300">Manage your fitness data</p>
            </div>
            <div class="card-content space-y-3">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    <span class="text-sm">These actions cannot be undone. Please proceed with caution.</span>
                </div>

                <a href="{{ path('app_user_deleteAllPerf', {'id': app.user.id}) }}"
                    class="settings-link settings-link-danger">
                    <i class="fas fa-chart-line mr-3 text-red-500"></i>
                    <div>
                        <span class="font-medium">Delete Performances</span>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Remove all performance data</p>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </a>

                <a href="{{ path('app_user_deleteAllTrack', {'id': app.user.id}) }}"
                    class="settings-link settings-link-danger">
                    <i class="fas fa-chart-bar mr-3 text-red-500"></i>
                    <div>
                        <span class="font-medium">Delete Trackings</span>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Remove all tracking data</p>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </a>

                <a href="{{ path('app_user_deleteAllSessions', {'id': app.user.id}) }}"
                    class="settings-link settings-link-danger">
                    <i class="fas fa-dumbbell mr-3 text-red-500"></i>
                    <div>
                        <span class="font-medium">Delete Sessions</span>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Remove all workout sessions</p>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </a>

                <a href="{{ path('app_user_deleteAllPrograms', {'id': app.user.id}) }}"
                    class="settings-link settings-link-danger">
                    <i class="fas fa-list-alt mr-3 text-red-500"></i>
                    <div>
                        <span class="font-medium">Delete Programs</span>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Remove all workout programs</p>
                    </div>
                    <i class="fas fa-chevron-right text-gray-400"></i>
                </a>
            </div>
        </div>

        <!-- Danger Zone -->
        <div class="lg:col-span-2">
            <div class="card border-red-200 dark:border-red-800">
                <div class="card-header bg-red-50 dark:bg-red-900/20 border-b border-red-200 dark:border-red-800">
                    <h2 class="card-title text-red-800 dark:text-red-200">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        Danger Zone
                    </h2>
                    <p class="text-sm text-red-600 dark:text-red-300">Permanent actions that cannot be undone</p>
                </div>
                <div class="card-content">
                    <div class="flex items-center justify-between p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
                        <div>
                            <h3 class="font-medium text-red-800 dark:text-red-200">Delete Account</h3>
                            <p class="text-sm text-red-600 dark:text-red-300">
                                Once you delete your account, there is no going back. Please be certain.
                            </p>
                        </div>
                        <a href="{{ path('app_user_delete', {'id': app.user.id}) }}" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete your account? This action cannot be undone.')">
                            <i class="fas fa-user-times mr-2"></i>
                            Delete Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}