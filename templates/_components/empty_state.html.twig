{# Reusable Empty State Component #}
{% set title = title ?? 'No Items Found' %}
{% set description = description ?? 'There are no items to display at the moment.' %}
{% set actionText = actionText ?? null %}
{% set actionUrl = actionUrl ?? null %}
{% set icon = icon ?? 'fas fa-inbox' %}
{% set iconColor = iconColor ?? 'from-gray-400/20 to-gray-600/20' %}
{% set iconTextColor = iconTextColor ?? 'dark:text-gray-400 light:text-gray-500' %}

<section class="text-center py-16" role="region" aria-label="Empty state">
    <div class="max-w-md mx-auto">
        <div
            class="w-24 h-24 bg-gradient-to-br {{ iconColor }} rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="{{ icon }} text-4xl {{ iconTextColor }}" aria-hidden="true"></i>
        </div>
        <h3 class="text-2xl font-bold dark:text-white light:text-gray-800 mb-4">{{ title }}</h3>
        <p class="dark:text-gray-400 light:text-gray-600 mb-8">
            {{ description }}
        </p>
        {% if actionText and actionUrl %}
        <a href="{{ actionUrl }}" class="btn-primary inline-flex focus:ring-2 focus:ring-quinary">
            <i class="fas fa-plus mr-2" aria-hidden="true"></i>
            {{ actionText }}
        </a>
        {% endif %}
    </div>
</section>