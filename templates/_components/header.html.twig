{# Enhanced Navigation Header #}
<header class="fixed z-50 top-0 left-0 w-full glass-nav shadow-2xl">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a class="font-bold text-2xl md:text-3xl group flex items-center space-x-2" href="{{ path('app_landing') }}">
            <div
                class="w-8 h-8 bg-gradient-to-br from-quinary to-quaternary rounded-lg flex items-center justify-center">
                <i class="fas fa-dumbbell text-white text-sm"></i>
            </div>
            <span class="group-hover:text-quinary duration-300 dark:text-white text-gray-800">Muscle</span><span
                class="group-hover:text-quaternary duration-300 dark:text-white text-gray-800">Mind</span>
        </a>

        {# Desktop Navigation #}
        <nav class="hidden lg:flex items-center space-x-6">
            {% if app.user %}
            <a href="{{ path('app_home') }}"
                class="nav-link dark:text-white text-gray-700 hover:text-quinary transition-colors">
                <i class="fas fa-home mr-2"></i>Dashboard
            </a>
            <a href="{{ path('app_training') }}"
                class="nav-link dark:text-white text-gray-700 hover:text-quinary transition-colors">
                <i class="fas fa-calendar-alt mr-2"></i>Programs
            </a>
            <a href="{{ path('app_exercice') }}"
                class="nav-link dark:text-white text-gray-700 hover:text-quinary transition-colors">
                <i class="fas fa-running mr-2"></i>Exercises
            </a>
            <div class="flex items-center space-x-4">
                <a href="{{ path('app_user') }}"
                    class="w-8 h-8 rounded-full bg-gradient-to-br from-quinary to-quaternary flex items-center justify-center text-white font-bold text-sm hover:scale-110 transition-transform">
                    {{ app.user.username|first|upper }}
                </a>
                <a href="{{ path('app_logout') }}" class="text-red-400 hover:text-red-300 transition-colors">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
            {% else %}
            <a href="{{ path('app_login') }}"
                class="dark:text-white text-gray-700 hover:text-quinary transition-colors">Login</a>
            <a href="{{ path('app_register') }}" class="btn-primary px-4 py-2 rounded-lg text-white font-medium">Get
                Started</a>
            {% endif %}
        </nav>

        {# Mobile Menu Button #}
        <button id="burger-menu"
            class="text-2xl dark:text-white text-gray-800 focus:outline-none p-2 rounded-lg hover:bg-white/10 transition-colors">
            <i class="fas fa-bars"></i>
        </button>
    </div>
</header>