{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

        <a href="{{path ('app_user_delete' ,{'id': user.id})}}">delete user</a> <br>
        <a href="{{path ('app_user_makeMod' ,{'id': user.id})}}">make Moderator</a> <br>
        <a href="{{path ('app_user_makeAdmin' ,{'id': user.id})}}">make Admin</a> <br><br>

        {{user}} <br>
        {{user.email}} <br>
        {{user.score}} <br> <br>

        
       


        {% if user.performances %}
        {# Made progress? write everything down <a href="{{ path ('app_user_newPerf')}}"> here</a> ! <br><br> #}
        {% for performance in user.performances %}
        {{performance}} <br>
        {% endfor %}
        {% else %}
        {# Wanna track your progress? add your performances <a href="#"> here</a> ! #}
        {% endif %} <br><br>

        {% if user.programs %} 
        {% for program in user.programs %}
        <a href="{{ path('app_training_edit', {'id': program.id}) }}">{{ program }}</a> <br>
        {% endfor %}
        {% endif %} <br><br>

        {% if user.sessions %}
        {% for session in user.sessions %}
            {{session}} <br>
        {% endfor %}
        {% endif %}

   
{% endblock %}
