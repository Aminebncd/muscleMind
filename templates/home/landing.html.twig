{% extends 'base.html.twig' %}

{% block title %}Welcome to MuscleMind{% endblock %}

{% block body %}
<!-- Header Section -->
<header class="w-full -mt-16 bg-secondary/40 backdrop-blur-md text-white text-center flex flex-col justify-between">
    <div class="flex flex-row">
        <div class="w-2/3">
            <img class="w-full h-full object-cover" src="{{ asset('img/landing/test.png') }}" alt="MuscleMind">
        </div>
        <div class="w-1/3 flex flex-col justify-center py-4 pr-10">
            <h1 class="text-5xl font-bold text-right pt-8">MuscleMind</h1>
            <p class="mt-2 text-lg text-right">Your personalized fitness companion</p>
            <h2 class="text-right text-4xl font-bold my-6">Transform Your Fitness Journey</h2>
            <p class="text-right mb-8 text-lg">Create custom workouts, track progress, and understand your muscles better.</p>
            <a href="{{ path('app_register') }}" class="w-3/4 mx-auto text-center px-8 py-4 mb-8 bg-quinary text-white font-bold rounded-lg hover:bg-quaternary hover:text-black transition duration-150 transform hover:-translate-y-1 motion-reduce:transition-none motion-reduce:hover:transform-none">Get Started</a>
        </div>
    </div>
    <div class="w-full bg-primary h-24"></div>
</header>

<!-- Features Section -->
<section class="text-center my-16 py-12 bg-primary/60 rounded-lg backdrop-blur-md">
    <div>
        <h2 class="text-3xl font-bold mb-4 text-white">Features</h2>
        <p class="mb-12 text-white">MuscleMind offers a range of features to help you achieve your fitness goals.</p>
    </div>
    <div class="relative w-full px-12 py-4 overflow-hidden">
        <!-- Carousel container -->
        <div class="carousel flex transition-transform duration-500 ease-in-out">
            <!-- Slide 1 -->
            <div class="min-w-full flex flex-col items-center px-4">
                <h3 class="text-xl font-bold mb-2 text-quinary">Create Your Programs</h3>
                <p class="text-white">Design custom workout plans tailored to your needs.</p>
                <img class="mt-4 object-cover rounded-lg w-[600px] h-auto" src="{{ asset('img/landing/program_creation.png') }}" alt="Create Programs">
            </div>
            <!-- Slide 2 -->
            <div class="min-w-full flex flex-col items-center px-4">
                <h3 class="text-xl font-bold mb-2 text-quaternary">Learn About Your Body</h3>
                <p class="text-white">Gain insights into your muscle groups and overall fitness.</p>
                <img class="mt-4 object-cover rounded-lg w-[600px] h-auto" src="{{ asset('img/landing/anatomy.png') }}" alt="Learn About Your Body">
            </div>
            <!-- Slide 3 -->
            <div class="min-w-full flex flex-col items-center px-4">
                <h3 class="text-xl font-bold mb-2 text-senary">Track Your Progress</h3>
                <p class="text-white">Monitor your improvements and stay motivated.</p>
                <img class="mt-4 object-cover rounded-lg w-[600px] h-auto" src="{{ asset('img/landing/tracking_page.png') }}" alt="Track Progress">
            </div>
        </div>
        <!-- Navigation buttons -->
        <button class="absolute left-20 top-1/2 transform -translate-y-1/2 bg-secondary text-white py-2 px-4 rounded-full focus:outline-none" onclick="prevSlide()" aria-label="Previous Slide">&#10094;</button>
        <button class="absolute right-20 top-1/2 transform -translate-y-1/2 bg-secondary text-white py-2 px-4 rounded-full focus:outline-none" onclick="nextSlide()" aria-label="Next Slide">&#10095;</button>
    </div>
</section>

<!-- Call to Action Section -->
<section class="text-center my-16">
    <h2 class="text-3xl font-bold mb-4 text-white">Ready to get started?</h2>
    <p class="mb-6 text-white">Join MuscleMind today and take your fitness journey to the next level.</p>
    <a href="{{ path('app_register') }}" class="px-8 py-4 bg-secondary text-white rounded-full hover:bg-tertiary transition duration-150">Sign Up Now</a>
</section>

{% endblock %}
