{% extends 'base.html.twig' %}

{% block title %}Welcome to MuscleMind{% endblock %}

{% block body %}
{# Header Section #}
<header class="w-full -mt-16 dark:bg-tertiary/40 light:bg-tertiary_light/10 backdrop-blur-md py-12 dark:text-white light:text-black text-center flex flex-col justify-between">
    <div class="flex flex-row">
        <div class="w-2/3 max-md:hidden">
            <img class="w-full h-full object-cover" src="{{ asset('img/landing/landing.webp') }}" alt="MuscleMind">
        </div>
        <div class="flex flex-col justify-center py-4 px-8 mr-10 max-sm:w-full">
            <h1 class="text-5xl font-bold text-right pt-8">MuscleMind</h1>
            <p class="light:font-bold mt-2 text-lg text-right">Your personalized fitness companion</p>
            <h2 class="text-right text-4xl font-bold my-6">Transform Your Fitness Journey</h2>
            <p class="light:font-bold text-right mb-8 text-lg">Create custom workouts, track progress, and understand your muscles better.</p>
            <button href="{{ path('app_register') }}" class="mr-10 w-3/4 mx-auto text-center px-8 py-4 mb-8 bg-quinary dark:text-white light:text-black font-bold rounded-lg hover:bg-quaternary hover:text-black transition duration-150 transform hover:-translate-y-1 motion-reduce:transition-none motion-reduce:hover:transform-none shadow-xl">Get Started</button>
        </div>
    </div>
</header>
<div class="w-full dark:bg-primary light:bg-primary_light h-24"></div>

{# Features Section #}
<section class="text-center py-16 dark:bg-secondary light:bg-secondary_light backdrop-blur-md overflow-hidden shadow-xl">
    <div>
        <h2 class="text-5xl font-bold mb-4 dark:text-white light:text-black">Features</h2>
        <p class="light:font-bold mb-12 dark:text-white light:text-black">MuscleMind offers a range of features to help you achieve your fitness goals.</p>
    </div>
    <div class="relative w-full px-12 py-4">
        {# Carousel container #}
        <div class="carousel flex transition-transform duration-500 ease-in-out">
            {# Slide 1 #}
            <div class="min-w-full flex flex-col items-center px-4">
                <h3 class="text-2xl font-bold mb-2 text-quinary light:stroke">Create Your Programs</h3>
                <p class="light:font-bold dark:text-white light:text-black">Design custom workout plans tailored to your needs.</p>
                <img class="mt-4 object-cover rounded-lg w-[600px] h-auto shadow-2xl" src="{{ asset('img/landing/program_creation.png') }}" alt="Create Programs">
            </div>
            {# Slide 2 #}
            <div class="min-w-full flex flex-col items-center px-4">
                <h3 class="text-2xl font-bold mb-2 text-quaternary light:stroke">Learn About Your Body</h3>
                <p class="light:font-bold dark:text-white light:text-black">Gain insights into your muscle groups and overall fitness.</p>
                <img class="mt-4 object-cover rounded-lg w-[600px] h-auto shadow-2xl" src="{{ asset('img/landing/anatomy.png') }}" alt="Learn About Your Body">
            </div>
            {# Slide 3 #}
            <div class="min-w-full flex flex-col items-center px-4">
                <h3 class="text-2xl font-bold mb-2 text-senary light:stroke">Track Your Progress</h3>
                <p class="light:font-bold dark:text-white light:text-black">Monitor your improvements and stay motivated.</p>
                <img class="mt-4 object-cover rounded-lg w-[600px] h-auto shadow-2xl" src="{{ asset('img/landing/tracking_page.png') }}" alt="Track Progress">
            </div>
        </div>
        {# Navigation buttons #}
        <button class="absolute left-20 top-1/2 transform -translate-y-1/2 bg-quinary dark:text-white light:text-black hover:bg-quaternary hover:scale-105 hover:text-black duration-150 shadow-lg px-4 py-2 rounded-full focus:outline-none" onclick="prevSlide()" aria-label="Previous Slide">&#10094;</button>
        <button class="absolute right-20 top-1/2 transform -translate-y-1/2 bg-quinary dark:text-white light:text-black hover:bg-quaternary hover:scale-105 hover:text-black duration-150 shadow-lg px-4 py-2 rounded-full focus:outline-none" onclick="nextSlide()" aria-label="Next Slide">&#10095;</button>
    </div>
</section>

{# <div class="w-full py-3 dark:bg-secondary flex justify-center">
    <hr class="w-3/4 text-gray-600 p-2">
</div> #}

{# Testimonials Section #}
<section class="w-full text-center py-16 dark:bg-tertiary light:bg-tertiary_light backdrop-blur-md shadow-xl">
    <div>
        <h2 class="text-5xl font-bold mb-4 dark:text-white light:text-black">What Our Users Say</h2>
        <p class="light:font-bold mb-12 dark:text-white light:text-black">Real feedback from our community.</p>
    </div>
    <div class="flex flex-wrap justify-center space-x-4">
        <div class="w-1/3 text-center px-4">
            <p class="light:font-bold text-lg dark:text-white light:text-black italic">"MuscleMind has transformed my fitness routine. Highly recommended!"</p>
            <p class="light:font-bold mt-2 dark:text-white light:text-black">- Alex</p>
        </div>
        <div class="w-1/3 text-center px-4">
            <p class="light:font-bold text-lg dark:text-white light:text-black italic">"A fantastic app for tracking progress and staying motivated."</p>
            <p class="light:font-bold mt-2 dark:text-white light:text-black">- Jamie</p>
        </div>
        <div class="w-1/3 text-center px-4 mt-8">
            <p class="light:font-bold text-lg dark:text-white light:text-black italic">"The custom workout plans are a game changer for me."</p>
            <p class="light:font-bold mt-2 dark:text-white light:text-black">- Taylor</p>
        </div>
    </div>
</section>

{# Pricing Section #}
<section class="w-full text-center py-12 dark:bg-primary light:bg-primary_light rounded-lg backdrop-blur-md shadow-xl">
    <div>
        <h2 class="text-5xl font-bold mb-4 dark:text-white light:text-black">Pricing</h2>
        <p class="light:font-bold mb-12 dark:text-white light:text-black">Choose a plan that fits your needs.</p>
    </div>
    <div class="flex flex-wrap justify-center space-x-4">
        <div class="w-1/3 text-center px-4">
            <h3 class="text-2xl font-bold dark:text-white light:text-black mb-2">Free</h3>
            <p class="light:font-bold dark:text-white light:text-black mb-4">Basic features to get you started.</p>
            <p class="light:font-bold dark:text-white light:text-black mb-4">$0/month</p>
            <button href="{{ path('app_register') }}" class="w-fit hover:scale-105 mx-auto text-center px-8 py-4 mb-8 bg-quinary dark:text-white light:text-black font-bold rounded-lg hover:bg-quaternary hover:text-black duration-150 shadow-xl">Try for free</button>
        </div>
        <div class="w-1/3 text-center px-4">
            <h3 class="text-2xl font-bold dark:text-white light:text-black mb-2">Pro</h3>
            <p class="light:font-bold dark:text-white light:text-black mb-4">Advanced features for professionals.</p>
            <p class="light:font-bold dark:text-white light:text-black mb-4">$9.99/month</p>
            <button href="{{ path('app_register') }}" class="w-fit hover:scale-105 mx-auto text-center px-8 py-4 mb-8 bg-quinary dark:text-white light:text-black font-bold rounded-lg hover:bg-quaternary hover:text-black duration-150 shadow-xl">Sign Up</button>
        </div>
        <div class="w-1/3 text-center px-4 mt-8">
            <h3 class="text-2xl font-bold dark:text-white light:text-black mb-2">Premium</h3>
            <p class="light:font-bold dark:text-white light:text-black mb-4">All features and priority support.</p>
            <p class="light:font-bold dark:text-white light:text-black mb-4">$19.99/month</p>
            <button href="{{ path('app_register') }}" class="w-fit hover:scale-105 mx-auto text-center px-8 py-4 mb-8 bg-quinary dark:text-white light:text-black font-bold rounded-lg hover:bg-quaternary hover:text-black duration-150 shadow-xl">Sign Up</button>
        </div>
    </div>
</section>

{# Call to Action Section #}
<section class="text-center bg-quaternary w-full py-12 shadow-xl">
    <h2 class="text-5xl font-bold mb-4 text-primary">Ready to get started?</h2>
    <p class="light:font-bold mb-6 text-primary">Join MuscleMind today and take your fitness journey to the next level.</p>
    <button href="{{ path('app_register') }}" class="w-fit hover:scale-105 mx-auto text-center px-8 py-4 mb-8 bg-quinary dark:text-white light:text-black font-bold rounded-lg hover:bg-senary hover:text-black duration-150 shadow-lg">Register Now</button>
</section>

{% endblock %}