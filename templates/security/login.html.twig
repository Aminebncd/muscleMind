{% extends 'base.html.twig' %}

{% block title %}Log in - MuscleMind{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <i class="fas fa-dumbbell text-quinary text-3xl mb-2"></i>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Welcome back!</h1>
                <p class="text-gray-600 dark:text-gray-300 mt-2">Sign in to your MuscleMind account</p>
            </div>
        </div>

        {% if error %}
        <div class="alert alert-error mb-6">
            <i class="fas fa-exclamation-triangle mr-2"></i>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
        {% endif %}

        <form method="post" class="auth-form">
            <div class="form-group">
                <label for="inputEmail" class="form-label">
                    <i class="fas fa-envelope mr-2"></i>Email address
                </label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input"
                    autocomplete="email" placeholder="Enter your email address" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword" class="form-label">
                    <i class="fas fa-lock mr-2"></i>Password
                </label>
                <input type="password" name="password" id="inputPassword" class="form-input"
                    autocomplete="current-password" placeholder="Enter your password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex items-center justify-between mb-6">
                <label class="flex items-center">
                    <input type="checkbox" name="_remember_me" class="form-checkbox">
                    <span class="ml-2 text-sm text-gray-600 dark:text-gray-300">Remember me</span>
                </label>
                <a href="{{ path('app_forgot_password_request') }}"
                    class="text-sm text-quinary hover:text-quaternary transition-colors">
                    Forgot password?
                </a>
            </div>

            <button type="submit" class="btn btn-primary w-full mb-6">
                <i class="fas fa-sign-in-alt mr-2"></i>
                Sign In
            </button>

            <div class="text-center">
                <p class="text-gray-600 dark:text-gray-300">
                    Don't have an account?
                    <a href="{{ path('app_register') }}"
                        class="text-quinary hover:text-quaternary font-medium transition-colors">
                        Sign up for free
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>
{% endblock %}