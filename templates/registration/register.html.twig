{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div
    class="dark:bg-secondary/60 light:bg-secondary_light/60 dark:text-white light:text-black p-8 rounded-lg w-5/6 mt-10 max-w-screen-lg font-medium backdrop-blur-md shadow-lg">

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="mt-4 px-8 py-6 mb-8 rounded-lg dark:dark:bg-primary/60 light:bg-primary_light/60 shadow-lg">
        <h1 class="text-2xl font-bold text-center p-4">Let's create your account!</h1>
    </div>
    {{app.flashes('error') | last}}
    {{ form_row(registrationForm.username) }}
    {{ form_row(registrationForm.email) }}
    <p>Your password should include :</p>
    <ul>
        <li>At least 12 characters</li>
        <li>At least one upper case character</li>
        <li>At least one number</li>
        <li>At least one special character</li>
    </ul>
    {{ form_row(registrationForm.plainPassword) }}
    {{ form_row(registrationForm.captcha)}}
    {{ form_row(registrationForm.agreeTerms) }}


    <div class="flex justify-end">
        <button type="submit"
            class="font-bold px-4 py-2 rounded-2xl w-fit dark:bg-tertiary light:bg-tertiary_light drop-shadow-xl dark:hover:bg-quinary light:hover:bg-senary duration-150">Register</button>
    </div>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}